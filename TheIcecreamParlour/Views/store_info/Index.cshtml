@model IEnumerable<TheIcecreamParlour.Models.store_info>

@{
    ViewBag.Title = "Store Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-family: 'Old English Text MT' ">Store Info</h2>

@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
    <table class="table table-hover table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.icecream.Flavour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.icecream.Flavour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.StoreLocationId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.StoreLocationId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.StoreLocationId })
                    </td>
                }
            </tr>
        }

    </table>
